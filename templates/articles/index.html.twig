{% extends 'base.html.twig' %}

{% block title %}Hello ArticlesController!{% endblock %}

{% block body %}
        {% for article in articles %}
            <tr class="text-center">
                <td>{{ article.Nom }}</td>
                <td>{{ article.Redacteur }}</td>
                <td>{{ article.Contenu }}</td>
                <img src="{{ article.Image }}"/>
                <td>
                    <a href="" class="btn btn-secondary mb-2">Modifier</a>
                    <a href="" class="btn btn-dark mb-2">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
{% endblock %}
